<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#7C969696"
        android:fontFamily="sans-serif"
        android:paddingTop="35dp"
        android:paddingRight="20dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="CE"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="C"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="BS"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="/"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="7"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="8"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="9"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="x"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="4"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button10"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="5"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button9" />

    <Button
        android:id="@+id/button11"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="6"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button10" />

    <Button
        android:id="@+id/button12"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="-"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button11" />

    <Button
        android:id="@+id/button13"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="1"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button14"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="2"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button10"
        app:layout_constraintTop_toTopOf="@+id/button13" />

    <Button
        android:id="@+id/button15"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="3"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button11"
        app:layout_constraintTop_toTopOf="@+id/button14" />

    <Button
        android:id="@+id/button16"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="+"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button12"
        app:layout_constraintTop_toTopOf="@+id/button15" />

    <Button
        android:id="@+id/button17"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="+/-"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:id="@+id/button18"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="0"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button14"
        app:layout_constraintTop_toTopOf="@+id/button17" />

    <Button
        android:id="@+id/button19"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="."
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button15"
        app:layout_constraintTop_toTopOf="@+id/button18" />

    <Button
        android:id="@+id/button20"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif"
        android:text="="
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/button16"
        app:layout_constraintTop_toTopOf="@+id/button19" />
</androidx.constraintlayout.widget.ConstraintLayout>